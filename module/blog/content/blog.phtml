<?php $entry = $api->getModule('Blog')->getEntryByUrl() ?>
<?php if ($entry): ?>
    <div class="blogEntry">
        <img src="/<?php echo $api->getModule('Blog')->getEntryImg($entry['id'], 'big'); ?>" />

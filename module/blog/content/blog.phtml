        <?php if ($entries['currentPage'] > 1): ?>
            <a href="/blog?page=<?php echo $entries['currentPage'] - 1; ?>">Poprzednia</a>
        <?php endif; ?>
        <?php if ($entries['pagesCount'] > $entries['currentPage']): ?>
